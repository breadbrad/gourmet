<p><%= flash[:alert] %></p>
<h2>Restaurant information</h2>

<div style="border: 1px solid #ffffff">
  <h4> Title: <%= @post.title %></h4>
  <p style="color: #ff0000">Kind: <%= @post.category %></p>
  <p>Content: <%= @post.content %></p>

  <p><a href="/foods/edit/<%= @post.id %>">Edit</a> | <a href="/foods/delete_complete/<%= @post.id %>">Delete</a></p>
  <hr>
  <% @post.comments.each do |comment| %>
  <p><strong><%= comment.user.username %></strong> <%= comment.content %> | <a href="/foods/delete_comment_complete/<%= comment.id %>">Delete</a></p>
  <% end %>
  <form action="/foods/write_comment_complete" method="post">
    <input type="hidden" name="post_id" value="<%= @post.id %>">
    <% if !@comment_writer.nil? %>
    <p>Write ID: <input type="text" name="comment_content" placeholder="Please comment."> <input type ="submit" value ="comment"></p>
   <% end %> 
  </form>
  <p><a href="/">Go to whole list</a></p>
</div>
